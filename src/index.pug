      +col({cols:[12, 6, 6, 3]})
        +row()
          +col({cols:[12, 4, 4, 12 ]})
            +post-primary()
          +col({cols:[12, 4, 4, 12 ]})
            +post-primary()
          +col({cols:[12, 4, 4, 12 ]})
            +post-primary()

