mixin post-secondary(props = {})
  -
    const defaultProps = {
      time: '25th November, 2020',
      iconSave: 'las la-bookmark',xs
    }
    const _props = Object.assign({}, defaultProps, props)

  +component('article', 'post-secondary')&attributes(attributes)
    +link().post-secondary__category=_props.category || random(api.post.categories)
    +link().post-secondary__thumb.aspect-ratio
      +img(src=_props.thumb || random(api.post.thumb)).img-cover
    div.post-secondary__info
      .flex.flex-between-middle
        +heading({className: 'post-secondary__title truncate-text-2', linkClassName: 'post-secondary__title-link'})
        +link().post-secondary__save
          i(class=_props.iconSave)

      .post-secondary__meta.flex.flex-middle
        +link().post-secondary__avatar
          +img(_props.avatar || random(api.post.avatar)).img-cover
        +link() By #[strong=_props.authorName || random(api.post.author)]
        span â€¢
        span=_props.time
